{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": ["node_modules", ".next", "app", "pages", "public", "dist"]
}
